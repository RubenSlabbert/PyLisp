(library (gcd-math)
         (export gcd)
         (export fac)

         (define (gcd x y)
           (let ((n (max (list (x y))))
                 (m (min (list (x y)))))
             (if (= 0 (modulo n m))
               m
               (gcd m (modulo n m)))))

         (define (fac n) (if (= n 0) 1 (* n (fac (- n 1))))))

(import gcd-math)

(display (= 120 (fac 5)))
(newline)
